<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="City">
	<resultMap type="cityVo" id="cityResultMap">
		<result property="id" column="ID"/>
		<result property="name" column="Name"/>
		<result property="countryCode" column="CountryCode"/>
		<result property="district" column="District" />
		<result property="population" column="Population" />
	</resultMap>
	<select id="selectCity" parameterType="String" resultType="cityVo" resultMap="cityResultMap">
		SELECT ID, Name, CountryCode, District, Population
		FROM city WHERE Name = #{name};
	</select>
	
	<select id="selectCitiesByCountryCode" parameterType="String" resultType="CityVo" resultMap="cityResultMap" >
		SELECT * 
		FROM city WHERE CountryCode = #{countryCode} ORDER BY Population DESC;
	</select>
</mapper>